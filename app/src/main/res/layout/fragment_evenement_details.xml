<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvenementDetailsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/details_title_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/details_title_label"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/details_title_label"
        android:text="TextView" />

    <TextView
        android:id="@+id/details_identifiant_label"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@+id/details_title_value"
        android:layout_alignStart="@+id/details_title_label"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:text="Identifiant : " />

    <TextView
        android:id="@+id/details_identifiant_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/details_identifiant_label"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/details_identifiant_label"
        android:text="TextView" />

    <TextView
        android:id="@+id/details_description_label"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@+id/details_identifiant_value"
        android:layout_alignStart="@+id/details_identifiant_label"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:text="Description :" />

    <TextView
        android:id="@+id/details_description_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/details_description_label"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/details_description_label"
        android:text="TextView" />

    <TextView
        android:id="@+id/details_title_label"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Titre : " />


</RelativeLayout>